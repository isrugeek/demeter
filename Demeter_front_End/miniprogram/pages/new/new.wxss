/* pages/new/new.wxss */
.h2-header {
 color: black;
  font-size: 50rpx; 
  font-weight: bold;
  padding: 10px;
}
/* Avatar */
.userinfo-avatar {
  width:180rpx;
  height:180rpx;
  margin:20rpx;
  border-radius:50%;
}

/* form style */
.user-input {
  width: 100%;
  margin-bottom: 35rpx;
}
.input-height {
  height: 10em;
}
.input-label {
  font-size: 35rpx;
}
textarea {
  padding: 10rpx 0;
  font-size: 35rpx;
  width: 100%;
}
.text-area-wrap {
  padding: 15rpx 15rpx;
  background-color: #fff;
  margin-top:8px;
  border-radius: 2px;
  border-left: 5px solid #9F9F9C;
}


/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  background-color: #F4F4F4;
} 
.wrap {
  padding: 10px 10px;
  margin: 0px 10px;
  text-align: left;
}

.header {
  text-align: center;
  align-content: center;
  background-color:#ffdc38;
  height: 150px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-bottom: 0.2px solid #ffdc38;
}
.h1-header {
  color: black;
  font-size: 55rpx; 
  font-weight: bold;
  padding: 30px;
}
.desc {
  margin-top: 35rpx;
  color: #888888;
  font-size: 25rpx;
  line-height: 18px;
}